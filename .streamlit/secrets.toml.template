# .streamlit/secrets.toml template for st-paywall integration

# Choose your payment provider: "stripe" or "bmac"
payment_provider = "bmac"

# For Buy Me a Coffee (BMC)
bmac_api_key = "YOUR_BMAC_API_KEY"
bmac_link = "YOUR_BMAC_LINK"

# For Stripe
# stripe_api_key = "YOUR_STRIPE_API_KEY"
# stripe_link = "YOUR_STRIPE_LINK"

# Google OAuth credentials (required for both)
client_id = "YOUR_GOOGLE_CLIENT_ID"
client_secret = "YOUR_GOOGLE_CLIENT_SECRET"
redirect_uri = "https://your-app-url.streamlit.app"
